                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY">

            </ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

